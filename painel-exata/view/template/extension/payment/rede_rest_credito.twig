      $(this).val(value);
    });

    $('input[name=soft_descriptor][type=text]').on('keyup change', function() {
      const value = $(this).val().toUpperCase().replace(/[^A-Z0-9]/g,'');
      $(this).val(value);
    });

    $('#regras').on('keyup change', function() {
      $('input[name^=regras][type=text]').each(function() {
        formatar_moeda($(this));
      });
    });

    $('input[name^=regras][type=text]').each(function() {
      $(this).on('input', function() {
        $('#regras table tr:gt(' + $(this).closest('tr').index() + ') input[name^=regras][type=text]').val(this.value);
      })
    });

    $('#parcelas-modal form').on('keyup change', function() {
      $('#parcelas-modal form input[type=text]').each(function() {
        formatar_moeda($(this));
      });
    });

    const parcelasPorBandeira = {{ bandeiras|json_encode }};
    let parcelaBandeira = '';

    function modalParcelas(bandeira) {
      parcelaBandeira = bandeira;

      const fim = $(`select[name="bandeiras[${bandeira}][parcelas]"]`).val();
      const inicio = parseInt($(`select[name="bandeiras[${bandeira}][sem_juros]"]`).val());

      $('#parcelas-modal form div.form-group').remove();
      $('#parcelas-modal .modal-footer .dropdown-menu').empty();

      for (let i = inicio + 1; i <= fim; i++) {
        $(`
        <div class="form-group">
          <div class="input-group">
            <div class="input-group-addon">${i}x</div>
            <input type="text" name="" value="${new Number(parcelasPorBandeira[bandeira]?.juros?.[i] ?? '').toFixed(2)}" data-field-idx="${i}" class="form-control" maxlength="5" required />
            <div class="input-group-addon">%</div>
          </div>
        </div>
      `).appendTo('#parcelas-modal form');
      }

      for (let bandeira in parcelasPorBandeira) {
        if (parcelasPorBandeira[bandeira].juros) {
          $(`
          <li class="dropdown-submenu">
            <button type="button" class="btn btn-default">${bandeira}</button>
          </li>
          `).appendTo('#parcelas-modal .modal-footer .dropdown-menu');
        }
      }

      $('#parcelas-modal').modal('show');
    }

    $('#modal-salvar-parcelas').click(function(e) {
      if (parcelasComErro()) {
        return;
      }

      const inputs = document.querySelectorAll('#parcelas-modal form input');

      $(`#bandeira-${parcelaBandeira} td:last-child input[type="hidden"]`).remove();
      $(`#bandeira-${parcelaBandeira} td:last-child p`).remove();

      parcelasPorBandeira[parcelaBandeira].juros = {};

      $(inputs).each(function() {
        const value = parseFloat($(this).val());
        const index = $(this).data('field-idx');

        if (value > 0 && value <= 100) {
          $(`<input type="hidden" name="bandeiras[${parcelaBandeira}][juros][${index}]" value="${value}" />`).appendTo(`#bandeira-${parcelaBandeira} td:last-child`);

          let formatado = "{{ text_formato_parcelas }}";
          formatado = formatado.replace('%s%', value.toFixed(2)).replace('%s', index);

          $(`<p>${formatado}</p>`).insertBefore(`#bandeira-${parcelaBandeira} td:last-child button`);

          parcelasPorBandeira[parcelaBandeira].juros[index] = value;
        }
      });

      $('#parcelas-modal').modal('hide');
    })

    $('#parcelas-modal form').on('keyupchange', 'input', function() {
      parcelasComErro($(this));
    })

    $('#parcelas-modal .modal-footer .dropdown-menu').on('click', 'button', function() {
      const bandeira = $(this).text().toLowerCase();

      $('#parcelas-modal form input').val('');

      for (let parcela in parcelasPorBandeira[bandeira].juros) {
        const parcelaValor = parcelasPorBandeira[bandeira].juros[parcela];

        $(`#parcelas-modal form input[data-field-idx="${parcela}"]`).val(new Number(parcelaValor).toFixed(2));
      }
    })

    function parcelasComErro(...inputs) {
      let hasError = false;

      $('#parcelas-modal form input').closest('.form-group').find('.text-danger').remove();

      if (inputs.length < 1) {
        inputs = document.querySelectorAll('#parcelas-modal form input');
      }

      $(inputs).each(function() {
        const value = parseFloat($(this).val() || 0);

        if (value <= 0 || value > 100) {
          $(this).closest('.form-group').append('<span class="text-danger">{{ error_taxa }}</span>');
          hasError = true;
        }
      })

      return hasError;
    }

    $('select[name$="[parcelas]"]').change(function() {
      const totalParcelas = $(this).val();
