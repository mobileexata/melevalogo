{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-payment" input type="hidden" id="save_stay" name="save_stay" value="1" data-toggle="tooltip" title="{{ button_save_stay }}" class="btn btn-success"><i class="fa fa-save"></i></button>
        <button type="submit" form="form-payment" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a>
      </div>
      <h1>{{ heading_title }}</h1> <span class="badge">{{ versao }}</span>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if error_warning %}
    <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}</div>
    {% endif %}
    {% if success %}
    <div class="alert alert-success"><i class="fa fa-check-circle"></i> {{ success }}</div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
      </div>
      <div class="panel-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-payment" class="form-horizontal">
          <ul class="nav nav-tabs">
            <li class="active"><a href="#tab-geral" data-toggle="tab">{{ tab_geral }}</a></li>
            <li><a href="#tab-bandeiras" data-toggle="tab">{{ tab_bandeiras }}</a></li>
            <li><a href="#tab-situacoes" data-toggle="tab">{{ tab_situacoes }}</a></li>
            <li><a href="#tab-campos" data-toggle="tab">{{ tab_campos }}</a></li>
            <li><a href="#tab-finalizacao" data-toggle="tab">{{ tab_finalizacao }}</a></li>
            <li><a href="#tab-clearsale" data-toggle="tab">{{ tab_clearsale }}</a></li>
          </ul>
          <div class="tab-content">
            <div class="tab-pane active" id="tab-geral">
              <div class="alert alert-info"><i class="fa fa-info-circle"></i> {{ info_geral }}</div>
              <div class="form-group">
                <div class="col-sm-3">
                  <h5><span class="text-danger">*</span> <strong>{{ entry_lojas }}</strong></h5>
                  <span class="help"><i class="fa fa-info-circle"></i> {{ help_lojas }}</span>
                </div>
                <div class="col-sm-6">
                  <div class="well well-sm" style="height: 150px; overflow: auto;">
                    {% for store in stores_data %}
                    <div class="checkbox">
                      <label>
                        <input type="checkbox" name="stores[]" value="{{ store.store_id }}" {{ store.store_id in stores ? 'checked="checked"' }} />
                        {{ store.name }}
                      </label>
                    </div>
                    {% endfor %}
                  </div>
                  <a onclick="$(this).parent().find(':checkbox').prop('checked', true);">{{ text_select_all }}</a> / <a onclick="$(this).parent().find(':checkbox').prop('checked', false);">{{ text_unselect_all }}</a>
                  {% if error_stores %}
                  <div class="text-danger">{{ error_stores }}</div>
                  {% endif %}
                </div>
              </div>
              <div class="form-group">
                <div class="col-sm-3">
                  <h5><span class="text-danger">*</span> <strong>{{ entry_tipos_clientes }}</strong></h5>
                  <span class="help"><i class="fa fa-info-circle"></i> {{ help_tipos_clientes }}</span>
                </div>
                <div class="col-sm-6">
                  <div class="well well-sm" style="height: 150px; overflow: auto;">
                    {% for customer_group in customer_groups_data %}
                    <div class="checkbox">
                      <label>
                        <input type="checkbox" name="customer_groups[]" value="{{ customer_group.customer_group_id }}" {{ customer_group.customer_group_id in customer_groups ? 'checked="checked"' }} />
                        {{ customer_group.name }}
                      </label>
                    </div>
                    {% endfor %}
                  </div>
                  <a onclick="$(this).parent().find(':checkbox').prop('checked', true);">{{ text_select_all }}</a> / <a onclick="$(this).parent().find(':checkbox').prop('checked', false);">{{ text_unselect_all }}</a>
                  {% if error_customer_groups %}
                  <div class="text-danger">{{ error_customer_groups }}</div>
                  {% endif %}
                </div>
              </div>
              <div class="form-group">
                <div class="col-sm-3">
                  <h5><strong>{{ entry_total }}</strong></h5>
                  <span class="help"><i class="fa fa-info-circle"></i> {{ help_total }}</span>
                </div>
                <div class="col-sm-3">
                  <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-money"></i></span>
                    <input type="text" name="total" value="{{ total }}" placeholder="" class="form-control" maxlength="6" />
                  </div>
                </div>
              </div>
              <div class="form-group">
                <div class="col-sm-3">
                  <h5><strong>{{ entry_geo_zone }}</strong></h5>
                </div>
                <div class="col-sm-3">
                  <select name="geo_zone_id" class="form-control">
                    <option value="0">{{ text_all_zones }}</option>
                    {% for geo_zone in geo_zones_data %}
                    <option value="{{ geo_zone.geo_zone_id }}" {{ geo_zone.geo_zone_id == geo_zone_id ? 'selected="selected"' }}>{{ geo_zone.name }}</option>
                    {% endfor %}
                  </select>
                </div>
              </div>
              <div class="form-group">
                <div class="col-sm-3">
                  <h5><strong>{{ entry_status }}</strong></h5>
                </div>
                <div class="col-sm-2">
                  <select name="status" class="form-control">
                    <option value="1" {{ status == '1' ? 'selected="selected"' }}>{{ text_enabled }}</option>
                    <option value="0" {{ status == '0' ? 'selected="selected"' }}>{{ text_disabled }}</option>
                  </select>
                </div>
              </div>
              <div class="form-group">
                <div class="col-sm-3">
                  <h5><strong>{{ entry_sort_order }}</strong></h5>
                </div>
                <div class="col-sm-2">
                  <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-sort"></i></span>
                    <input type="text" name="sort_order" value="{{ sort_order }}" placeholder="" class="form-control" maxlength="2" />
                  </div>
                </div>
              </div>
            </div>
            <div class="tab-pane" id="tab-bandeiras">
              <div class="alert alert-info"><i class="fa fa-info-circle"></i> {{ info_bandeiras }}</div>
              <div class="form-group">
                <div class="col-sm-3">
                  <h5><span class="text-danger">*</span> <strong>{{ entry_minimo }}</strong></h5>
                  <span class="help"><i class="fa fa-info-circle"></i> {{ help_minimo }}</span>
                </div>
                <div class="col-sm-3">
                  <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-money"></i></span>
                    <input type="text" name="minimo" value="{{ minimo }}" placeholder="" class="form-control" maxlength="6" />
                  </div>
                </div>
              </div>
              <div class="form-group">
                <div class="col-sm-3">
                  <h5><strong>{{ entry_desconto }}</strong></h5>
                  <span class="help"><i class="fa fa-info-circle"></i> {{ help_desconto }}</span>
                </div>
                <div class="col-sm-3">
                  <div class="input-group">
                    <span class="input-group-addon">%</span>
                    <input type="text" name="desconto" value="{{ desconto }}" placeholder="" class="form-control" maxlength="6" />
                  </div>
                </div>
              </div>
              <div class="form-group">
                <div class="col-sm-3">
                  <h5><span class="text-danger">*</span> <strong>{{ entry_soft_descriptor }}</strong></h5>
                  <span class="help"><i class="fa fa-info-circle"></i> {{ help_soft_descriptor }}</span>
                </div>
                <div class="col-sm-3">
                  <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-shopping-cart"></i></span>
                    <input type="text" name="soft_descriptor" value="{{ soft_descriptor }}" placeholder="" class="form-control" maxlength="13" />
                  </div>
                  {% if error_soft_descriptor %}
                  <div class="text-danger">{{ error_soft_descriptor }}</div>
                  {% endif %}
                </div>
              </div>
              <div class="form-group">
                <div class="col-sm-3">
                  <h5><strong>{{ entry_captura }}</strong></h5>
                  <span class="help"><i class="fa fa-info-circle"></i> {{ help_captura }}</span>
                </div>
                <div class="col-sm-3">
                  <select name="captura" class="form-control">
                    <option value="1" {{ captura == '1' ? 'selected="selected"' }}>{{ text_automatica }}</option>
                    <option value="0" {{ captura == '0' ? 'selected="selected"' }}>{{ text_manual }}</option>
                  </select>
                </div>
              </div>
              <div class="form-group">
                <div class="col-sm-3">
                  <h5><span class="text-danger">*</span> <strong>{{ entry_dias }}</strong></h5>
                  <span class="help"><i class="fa fa-info-circle"></i> {{ help_dias }}</span>
                </div>
                <div class="col-sm-3">
                  <label>{{ entry_dias_capturar }}</label>
                  <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-calendar-o"></i></span>
                    <input type="text" name="dias_capturar" value="{{ dias_capturar }}" placeholder="" class="form-control" maxlength="3" />
                  </div>
                  {% if error_dias_capturar %}
                  <div class="text-danger">{{ error_dias_capturar }}</div>
                  {% endif %}
                </div>
                <div class="col-sm-3">
                  <label>{{ entry_dias_cancelar_autorizacao }}</label>
                  <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-calendar-o"></i></span>
                    <input type="text" name="dias_cancelar_autorizacao" value="{{ dias_cancelar_autorizacao }}" placeholder="" class="form-control" maxlength="3" />
                  </div>
                  {% if error_dias_cancelar_autorizacao %}
                  <div class="text-danger">{{ error_dias_cancelar_autorizacao }}</div>
                  {% endif %}
                </div>
                <div class="col-sm-3">
                  <label>{{ entry_dias_cancelar_captura }}</label>
                  <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-calendar-o"></i></span>
                    <input type="text" name="dias_cancelar_captura" value="{{ dias_cancelar_captura }}" placeholder="" class="form-control" maxlength="3" />
                  </div>
                  {% if error_dias_cancelar_captura %}
                  <div class="text-danger">{{ error_dias_cancelar_captura }}</div>
                  {% endif %}
                </div>
              </div>
              <div style="border-top: 1px solid #ececec; margin-top: 10px; padding-top: 10px;">
                <ul class="nav nav-pills nav-stacked col-md-2">
                  <li class="active"><a href="#parcelamentos" data-toggle="tab">{{ text_parcelamentos }}</a></li>
                  <li><a href="#regras" data-toggle="tab">{{ text_regras }}</a></li>
                </ul>
                <div class="tab-content col-md-10">
                  <div class="tab-pane active" id="parcelamentos">
                    <div class="alert alert-info"><i class="fa fa-info-circle"></i> {{ info_parcelamentos }}</div>
                    {% if error_taxas %}
                    <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_taxas }}</div>
                    {% endif %}
                    <div class="table-responsive">
                      <table class="table table-bordered table-striped">
                        <thead>
                          <tr>
                            <th class="text-center" style="min-width:200px">{{ column_bandeira }}</th>
                            <th class="text-center" style="min-width:200px">{{ column_ativa }}</th>
                            <th class="text-center" style="min-width:200px">{{ column_parcelas }}</th>
                            <th class="text-center" style="min-width:200px">{{ column_sem_juros }}</th>
                            <th class="text-center" style="max-width:100px">{{ column_juros }}</th>
                          </tr>
                        </thead>
                        <tbody>
                          {% if bandeiras %}
                          {% for bandeira in bandeiras %}
                          <tr id="bandeira-{{ bandeira.nome }}">
                            <td class="text-center">
                              <strong>{{ bandeira.nome|capitalize }}</strong>
                              <input type="hidden" name="bandeiras[{{ bandeira.nome }}][nome]" value="{{ bandeira.nome }}" />
                            </td>
                            <td class="text-center">
                              <label class="switch">
                                <input type="checkbox" name="bandeiras[{{ bandeira.nome }}][ativa]" {{ bandeira.ativa == 'on' ? 'checked' : '' }} />
                                <span class="slider round"></span>
                              </label>
                            </td>
                            <td class="text-center">
                              <select name="bandeiras[{{ bandeira.nome }}][parcelas]" class="form-control">
                                {% for parcela in parcelas_data %}
                                <option value="{{ parcela }}" {{ parcela == bandeira.parcelas ? 'selected="selected"' }}>{{ "%02d"|format(parcela) }}</option>
                                {% endfor %}
                              </select>
                            </td>
                            <td class="text-center">
                              <select name="bandeiras[{{ bandeira.nome }}][sem_juros]" class="form-control">
                                {% for parcela in parcelas_data %}
                                <option value="{{ parcela }}" {{ parcela == bandeira.sem_juros ? 'selected="selected"' }}>{{ "%02d"|format(parcela) }}</option>
                                {% endfor %}
                              </select>
                            </td>
                            <td class="text-center">
                              {% for parcela, juros in bandeira.juros %}
                              <p>{{ text_formato_parcelas|format(parcela, "%0.2f"|format(juros)) }}</p>
                              <input type="hidden" name="bandeiras[{{ bandeira.nome }}][juros][{{ parcela }}]" value="{{ juros }}" />
                              {% endfor %}
                              <button type="button" class="btn btn-default" onclick="modalParcelas('{{ bandeira.nome }}')" {{ bandeira.parcelas <= bandeira.sem_juros ? 'disabled' }}>
                                {{ button_configurar_taxas }}
                              </button>
                            </td>
                          </tr>
                          {% endfor %}
                          {% endif %}
                        </tbody>
                      </table>
                    </div>
                  </div>
                  <div class="tab-pane" id="regras">
                    <div class="alert alert-info"><i class="fa fa-info-circle"></i> {{ info_regras }}</div>
                    <div class="table-responsive">
                      <table class="table table-bordered table-striped">
                        <thead>
                          <tr>
                            <td class="text-center" style="min-width:250px">{{ column_total }}</td>
                            <td class="text-center" style="min-width:250px">{{ column_parcelas }}</td>
                          </tr>
                        </thead>
                        <tbody>
                          {% for regra in regras %}
                          {%  if regra.parcela %}
                          <tr>
                            <td class="text-center">
                              <strong>{{ "%02.2d"|format(regra.parcela) }}</strong>
                              <input type="hidden" name="regras[{{ regra.parcela }}][parcela]" value="{{ regra.parcela }}" />
                            </td>
                            <td class="text-center">
                              <div class="input-group">
                                <div class="input-group-addon"><i class="fa fa-money"></i></div>
                                <input type="text" name="regras[{{ regra.parcela }}][total]" value="{{ regra.total }}" placeholder="" class="form-control" maxlength="7" />
                              </div>
                            </td>
                          </tr>
                          {% endif %}
                          {% endfor %}
                        </tbody>
                      </table>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="tab-pane" id="tab-situacoes">
              <div class="alert alert-info"><i class="fa fa-info-circle"></i> {{ info_situacoes }}</div>
              <div class="form-group">
                <div class="col-sm-3">
                  <h5><strong>{{ entry_situacao_pendente }}</strong></h5>
                  <span class="help"><i class="fa fa-info-circle"></i> {{ help_situacao_pendente }}</span>
                </div>
                <div class="col-sm-3">
                  <select name="situacao_pendente_id" class="form-control">
                    {% for order_status in order_statuses_data %}
                    <option value="{{ order_status.order_status_id }}" {{ order_status.order_status_id == situacao_pendente_id ? 'selected="selected"' }}>{{ order_status.name }}</option>
                    {% endfor %}
                  </select>
                </div>
              </div>
              <div class="form-group">
                <div class="col-sm-3">
                  <h5><strong>{{ entry_situacao_autorizada }}</strong></h5>
                  <span class="help"><i class="fa fa-info-circle"></i> {{ help_situacao_autorizada }}</span>
                </div>
                <div class="col-sm-3">
                  <select name="situacao_autorizada_id" class="form-control">
                    {% for order_status in order_statuses_data %}
                    <option value="{{ order_status.order_status_id }}" {{ order_status.order_status_id == situacao_autorizada_id ? 'selected="selected"' }}>{{ order_status.name }}</option>
                    {% endfor %}
                  </select>
                </div>
              </div>
              <div class="form-group">
                <div class="col-sm-3">
                  <h5><strong>{{ entry_situacao_nao_autorizada }}</strong></h5>
                  <span class="help"><i class="fa fa-info-circle"></i> {{ help_situacao_nao_autorizada }}</span>
                </div>
                <div class="col-sm-3">
                  <select name="situacao_nao_autorizada_id" class="form-control">
                    {% for order_status in order_statuses_data %}
                    <option value="{{ order_status.order_status_id }}" {{ order_status.order_status_id == situacao_nao_autorizada_id ? 'selected="selected"' }}>{{ order_status.name }}</option>
                    {% endfor %}
                  </select>
                </div>
              </div>
              <div class="form-group">
                <div class="col-sm-3">
                  <h5><strong>{{ entry_situacao_capturada }}</strong></h5>
                  <span class="help"><i class="fa fa-info-circle"></i> {{ help_situacao_capturada }}</span>
                </div>
                <div class="col-sm-3">
                  <select name="situacao_capturada_id" class="form-control">
                    {% for order_status in order_statuses_data %}
                    <option value="{{ order_status.order_status_id }}" {{ order_status.order_status_id == situacao_capturada_id ? 'selected="selected"' }}>{{ order_status.name }}</option>
                    {% endfor %}
                  </select>
                </div>
              </div>
              <div class="form-group">
                <div class="col-sm-3">
                  <h5><strong>{{ entry_situacao_cancelada }}</strong></h5>
                  <span class="help"><i class="fa fa-info-circle"></i> {{ help_situacao_cancelada }}</span>
                </div>
                <div class="col-sm-3">
                  <select name="situacao_cancelada_id" class="form-control">
                    {% for order_status in order_statuses_data %}
                    <option value="{{ order_status.order_status_id }}" {{ order_status.order_status_id == situacao_cancelada_id ? 'selected="selected"' }}>{{ order_status.name }}</option>
                    {% endfor %}
                  </select>
                </div>
              </div>
            </div>
            <div class="tab-pane" id="tab-campos">
              <div class="alert alert-info"><i class="fa fa-info-circle"></i> {{ info_campos }}</div>
              <div class="form-group">
                <div class="col-sm-3">
                  <h5><strong>{{ entry_custom_razao_id }}</strong></h5>
                  <span class="help"><i class="fa fa-info-circle"></i> {{ help_custom_razao_id }}</span>
                </div>
                <div class="col-sm-3">
                  <label>{{ text_campo }}</label>
                  <select name="custom_razao_id" class="form-control">
                    <option value="">{{ text_none }}</option>
                    <option value="C" {{ custom_razao_id == 'C' ? 'selected="selected"' }}>{{ text_coluna }}</option>
                    {% for custom_field in custom_fields_data %}
                    {% if custom_field.location == 'account' and custom_field.type == 'text' %}
                    <option value="{{ custom_field.custom_field_id }}" {{ custom_field.custom_field_id == custom_razao_id ? 'selected="selected"' }}>{{ custom_field.name }}</option>
                    {% endif %}
                    {% endfor %}
                  </select>
                </div>
                <div class="col-sm-3" id="razao_coluna">
                  <label>{{ text_razao }}</label>
                  <select name="razao_coluna" class="form-control">
                    <option value=""></option>
                    {% for column in columns_data %}
                    {% if column.Field == razao_coluna %}
                    <option value="{{ column.Field }}" selected="selected">{{ column.Field }}</option>
                    {% else %}
                    <option value="{{ column.Field }}">{{ column.Field }}</option>
                    {% endif %}
                    {% endfor %}
                  </select>
                  {% if error_razao %}
                  <div class="text-danger">{{ error_razao }}</div>
                  {% endif %}
                </div>
              </div>
              <div class="form-group">
                <div class="col-sm-3">
                  <h5><strong>{{ entry_custom_cnpj_id }}</strong></h5>
                  <span class="help"><i class="fa fa-info-circle"></i> {{ help_custom_cnpj_id }}</span>
                </div>
                <div class="col-sm-3">
                  <label>{{ text_campo }}</label>
                  <select name="custom_cnpj_id" class="form-control">
                    <option value="">{{ text_none }}</option>
                    <option value="C" {{ custom_cnpj_id == 'C' ? 'selected="selected"' }}>{{ text_coluna }}</option>
                    {% for custom_field in custom_fields_data %}
                    {% if custom_field.location == 'account' and custom_field.type == 'text' %}
                    <option value="{{ custom_field.custom_field_id }}" {{ custom_field.custom_field_id == custom_cnpj_id ? 'selected="selected"' }}>{{ custom_field.name }}</option>
                    {% endif %}
                    {% endfor %}
                  </select>
                </div>
                <div class="col-sm-3" id="cnpj_coluna">
                  <label>{{ text_cnpj }}</label>
                  <select name="cnpj_coluna" class="form-control">
                    <option value=""></option>
                    {% for column in columns_data %}
                    {% if column.Field == cnpj_coluna %}
                    <option value="{{ column.Field }}" selected="selected">{{ column.Field }}</option>
                    {% else %}
                    <option value="{{ column.Field }}">{{ column.Field }}</option>
                    {% endif %}
                    {% endfor %}
                  </select>
                  {% if error_cnpj %}
                  <div class="text-danger">{{ error_cnpj }}</div>
                  {% endif %}
                </div>
              </div>
              <div class="form-group">
                <div class="col-sm-3">
                  <h5><span class="text-danger">*</span> <strong>{{ entry_custom_cpf_id }}</strong></h5>
                  <span class="help"><i class="fa fa-info-circle"></i> {{ help_custom_cpf_id }}</span>
                </div>
                <div class="col-sm-3">
                  <label>{{ text_campo }}</label>
                  <select name="custom_cpf_id" class="form-control">
                    <option value="">{{ text_none }}</option>
                    <option value="C" {{ custom_cpf_id == 'C' ? 'selected="selected"' }}>{{ text_coluna }}</option>
                    {% for custom_field in custom_fields_data %}
                    {% if custom_field.location == 'account' and custom_field.type == 'text' %}
                    <option value="{{ custom_field.custom_field_id }}" {{ custom_field.custom_field_id == custom_cpf_id ? 'selected="selected"' }}>{{ custom_field.name }}</option>
                    {% endif %}
                    {% endfor %}
                  </select>
                  {% if error_cpf_obrigatorio %}
                  <div class="text-danger">{{ error_cpf_obrigatorio }}</div>
                  {% endif %}
                </div>
                <div class="col-sm-3" id="cpf_coluna">
                  <label>{{ text_cpf }}</label>
                  <select name="cpf_coluna" class="form-control">
                    <option value=""></option>
                    {% for column in columns_data %}
                    {% if column.Field == cpf_coluna %}
                    <option value="{{ column.Field }}" selected="selected">{{ column.Field }}</option>
                    {% else %}
                    <option value="{{ column.Field }}">{{ column.Field }}</option>
                    {% endif %}
