      $(this).closest('tr').find('select[name$="[sem_juros]"] option').each(function() {
        $(this).prop('disabled', parseInt($(this).val()) > totalParcelas);
      })

      if ($(totalSemJuros).val() == null) {
        $(totalSemJuros).val(totalParcelas);
      }
    })

    $('select[name$="[sem_juros]"], select[name$="[parcelas]"]').change(function() {
      const totalSemJuros = parseInt($(this).closest('tr').find('select[name$="[sem_juros]"]').val());
      const totalParcelas = parseInt($(this).closest('tr').find('select[name$="[parcelas]"]').val());

      $(this).closest('tr').find('td:last-child button').prop('disabled', totalSemJuros >= totalParcelas);

      if (totalSemJuros >= totalParcelas) {
        $(this).closest('tr').find('td:last-child p, td:last-child input').remove();
      }
    })

