    function formatar_moeda(valor) {
      let value = valor.val().replace(/[\D]+/g, '');
      if (value.length < 3) { value = ('000' + value).slice(-3); }
      value = value.replace(/([0-9]{2})$/g, ".$1");
      valor.val(Number(value).toFixed(2));
    }

    $('input[name=total][type=text], input[name=minimo][type=text], input[name=desconto][type=text]').on('keyup change', function() {
